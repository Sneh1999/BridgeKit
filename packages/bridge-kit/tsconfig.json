{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src",
    "jsx": "react",
    "isolatedModules": true,
    "preserveSymlinks": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/dist/**/*", "**/__tests__/**/*"]
}
